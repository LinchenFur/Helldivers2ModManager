<Page x:Class="Helldivers2ModManager.Views.SettingsPageView"
	  x:ClassModifier="internal"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:vms="clr-namespace:Helldivers2ModManager.ViewModels"
	  xmlns:sys="clr-namespace:System;assembly=mscorlib"
	  xmlns:logging="clr-namespace:Microsoft.Extensions.Logging;assembly=Microsoft.Extensions.Logging.Abstractions"
	  mc:Ignorable="d"
	  d:DataContext="{d:DesignInstance vms:SettingsPageViewModel}"
	  d:Background="Black"
	  d:DesignWidth="800"
	  d:DesignHeight="600"
	  Title="{Binding Title}">
	<Page.Resources>
		<ObjectDataProvider x:Key="LogLevelEnumData"
							MethodName="GetValues"
							ObjectType="{x:Type sys:Enum}">
			<ObjectDataProvider.MethodParameters>
				<x:Type TypeName="logging:LogLevel"/>
			</ObjectDataProvider.MethodParameters>
		</ObjectDataProvider>
	</Page.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<ScrollViewer Grid.Row="0"
					  Margin="3">
			<StackPanel Margin="3">
				<TextBlock FontSize="24"
						   Foreground="White"
						   Text="游戏目录"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray">
					这是您希望安装 Mod 的游戏目录。
					<LineBreak/>
					（点击“...”将提示您选择游戏目录）
				</TextBlock>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBox Text="{Binding GameDir, Mode=OneWay}"
							 IsReadOnly="True"
							 FontSize="18"
							 VerticalAlignment="Center"/>
					<Button Grid.Column="1"
							Content="自动搜索"
							Command="{Binding DetectGameCommand}"/>
					<Button Grid.Column="2"
							Content="..."
							Command="{Binding BrowseGameCommand}"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="存储目录"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray">
					这是存储所有 Mod 文件的地方。
				</TextBlock>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="Red">
					在更改此文件夹之前清除，因为已安装文件的记录存储在此文件夹中！
				</TextBlock>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBox Text="{Binding StorageDir, Mode=OneWay}"
							 IsReadOnly="True"
							 FontSize="18"
							 VerticalAlignment="Center"/>
					<Button Content="..."
							Grid.Column="1"
							Command="{Binding BrowseStorageCommand}"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="临时目录"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray">
					这是将存储所有临时文件的目录。示例包括：
					<LineBreak/>
					- 下载文件
					<LineBreak/>
					- 临时文件
					<LineBreak/>
					- 解压缩的文件
				</TextBlock>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBox Text="{Binding TempDir, Mode=OneWay}"
							 IsReadOnly="True"
							 FontSize="18"
							 VerticalAlignment="Center"/>
					<Button Content="..."
							Grid.Column="1"
							Command="{Binding BrowseTempCommand}"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="不透明度"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray">
					改变背景不透明度.
				</TextBlock>
				<Slider HorizontalAlignment="Left"
						Width="200"
						Minimum="0.5"
						Maximum="1"
						TickFrequency="0.05"
						TickPlacement="BottomRight"
						IsSnapToTickEnabled="True"
						Value="{Binding Opacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="日志等级"/>
				<TextBlock FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray">
					这将设置应记录到日志文件中的消息的级别.
					选项 set 及其下面的任何内容都将被捕获并记录。
					<LineBreak/>
					默认情况下，只会记录 warnings 和任何更严重的内容。
				</TextBlock>
				<ComboBox HorizontalAlignment="Left"
						  ItemsSource="{Binding Source={StaticResource LogLevelEnumData}}"
						  SelectedItem="{Binding LogLevel}"/>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="搜索"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<CheckBox Grid.Row="0"
							  Grid.Column="0"
							  Width="30"
							  Height="30"
							  IsChecked="{Binding CaseSensitiveSearch}"
							  Margin="0 0 5 0"/>
					<TextBlock Grid.Row="0"
							   Grid.Column="1"
							   FontSize="12"
							   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
							   Foreground="DarkGray"
							   Text="区分大小写"
							   VerticalAlignment="Center"/>
				</Grid>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="应用程序"/>
				<Button Content="重置"
						Style="{DynamicResource CancelButton}"
						Command="{Binding ResetCommand}"
						HorizontalAlignment="Left"/>
				<TextBlock Grid.Column="0"
						   FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Margin="0 0 0 5">
					这会将所有设置重置为默认值！
				</TextBlock>
				<TextBlock FontSize="24"
						   Foreground="White"
						   Margin="0 10 0 0"
						   Text="开发选项"
						   TextDecorations="Underline"/>
				<TextBlock FontSize="18"
						   Foreground="White"
						   Margin="0 5 0 0"
						   Text="跳过列表"/>
				<TextBlock Grid.Column="0"
						   FontSize="12"
						   FontFamily="..\Resources\Fonts\#FS Sinclair Regular"
						   Foreground="DarkGray"
						   Margin="0 0 0 5">
					这将在部署期间跳过所有指定文件的第 0 个索引.
				</TextBlock>
				<ListBox Width="300"
						 MinHeight="50"
						 ItemsSource="{Binding SkipList}"
						 HorizontalAlignment="Left"
						 BorderBrush="LightGray"
						 BorderThickness="3"
						 Background="Black"
						 SelectedIndex="{Binding SelectedSkip}">
					<ListBox.ItemTemplate>
						<DataTemplate DataType="{x:Type sys:String}">
							<TextBlock Text="{Binding}"
									   Foreground="White"
									   FontFamily="Consolas"/>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
				<StackPanel Orientation="Horizontal">
					<Button Command="{Binding AddSkipCommand}"
							Margin="0 3 3 3"
							Padding="10 0">
						<TextBlock Text="+"
								   FontSize="24"
								   FontFamily="../Resources/Fonts/#FS Sinclair Medium"/>
					</Button>
					<Button Command="{Binding RemoveSkipCommand}"
							Margin="0 3 3 3"
							Padding="10 0">
						<TextBlock Text="-"
								   FontSize="24"
								   FontFamily="../Resources/Fonts/#FS Sinclair Medium"/>
					</Button>
				</StackPanel>
			</StackPanel>
		</ScrollViewer>
		<Grid Grid.Row="1">
			<Button Content="确认"
					Command="{Binding OkCommand}"
					HorizontalAlignment="Right"/>
		</Grid>
	</Grid>
</Page>
